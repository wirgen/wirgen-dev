---
pagination:
  data: collections.postsReverse
  size: 4
  alias: postslist
layout: layouts/base.njk
permalink: /posts/{% if pagination.pageNumber > 0 %}{{ pagination.pageNumber + 1 }}/{% endif %}
eleventyNavigation:
  key: Блог
  order: 2
---
<h1 class="mb-4 text-4xl font-extrabold leading-normal sr-only">Блог</h1>
<div class="divide-y">
  {% include "postslist.njk" %}
</div>
<div class="flex justify-between font-medium text-lg">
  {% if page.url != pagination.href.first %}
    <a style="width:200px" href="{{ pagination.href.previous }}">&leftarrow; Предыдущие посты</a>
  {% else %}<span style="width:200px"></span>{% endif %}
  <div>{{ pagination.pageNumber + 1 }} из {{ pagination.pages | count }}</div>
  {% if page.url != pagination.href.last %}
    <a style="width:200px" href="{{ pagination.href.next }}">Следующие посты &rightarrow;</a>
  {% else %}<span style="width:200px"></span>{% endif %}
</div>
