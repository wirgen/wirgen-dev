---
layout: layouts/base.njk
eleventyNavigation:
  key: Теги
  order: 1
---
<div class="lg:mx-24 xl:mx-48 min-h-screen/2 md:flex items-center">
  <div class="mb-4 md:mb-0 md:mr-8 md:py-4 md:pr-8 md:border-r-4">
    <h1 class="text-2xl md:text-3xl lg:text-4xl font-extrabold leading-normal">Теги</h1>
  </div>
  <ul class="mt-12 flex-grow flex flex-wrap font-medium">
    {% for tag, count in collections.tagList %}
      {% set tagUrl %}/tags/{{ tag | slug }}/{% endset %}
      <li class="my-2 mr-5">
        <a href="{{ tagUrl | url }}">
          <span class="px-1.5 py-1 bg-primary-50 uppercase">{{ tag }}</span><span
            class="px-1.5 py-1 text-gray-700 bg-gray-100">{{ count }}</span>
        </a>
      </li>
    {% endfor %}
  </ul>
</div>
